{
  "name": "adoptapet",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "start:prod": "node server.js",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build"
  },
  "author": "Filipe Laborde",
  "license": "MIT",
  "dependencies": {
    "@petfinder/petfinder-js": "^1.0.6",
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "gh-pages": "^3.1.0",
    "if-env": "^1.0.4",
    "mongoose": "^6.10.0",
    "node-fetch": "^2.6.9",
    "react-leaflet": "^3.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/leaflet": "^1.7.0",
    "concurrently": "^6.5.1",
    "nodemon": "^2.0.20"
  }
}
