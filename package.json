    "@petfinder/petfinder-js": "^1.0.6",
    "bcrypt": "^5.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "gh-pages": "^3.1.0",
    "mongoose": "^5.12.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/leaflet": "^1.7.0",
    "concurrently": "^6.0.0",
    "nodemon": "^2.0.7"
  }
}
